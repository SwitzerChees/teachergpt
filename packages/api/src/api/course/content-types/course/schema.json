{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "questions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::question.question",
      "mappedBy": "course"
    },
    "summary": {
      "type": "customField",
      "options": {
        "output": "Markdown",
        "preset": "light"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "artefacts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::artefact.artefact",
      "mappedBy": "course"
    },
    "status": {
      "type": "enumeration",
      "enum": ["open", "done", "archived"],
      "default": "open",
      "required": true
    },
    "school": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::school.school",
      "inversedBy": "courses"
    }
  }
}
